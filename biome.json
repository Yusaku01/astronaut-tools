{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"files": {
		"includes": ["**/*.{js,jsx,ts,tsx,astro,css,html,json,jsonc,md}"],
		"ignoreUnknown": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "auto"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"html": {
		"linter": { "enabled": true },
		"assist": { "enabled": true }
	}
}
