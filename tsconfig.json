{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"verbatimModuleSyntax": true
	},
	"include": [
		".astro/types.d.ts",
		"src/**/*",
		"astro.config.*",
		"playwright.config.*"
	],
	"exclude": ["dist", "node_modules", "external"]
}
