---
const {
  title,
  as = 'article',
  href,
  variant = 'elevated',
  tone = 'neutral'
} = Astro.props;

const isLink = typeof href === 'string' && href.length > 0;
const Tag = isLink ? 'a' : as;

const toneClass = `ui-card--tone ui-card--tone-${tone}`;
const cls = `ui-card ui-card--${variant} ${toneClass}`;
---
<${Tag} class={cls} href={isLink ? href : undefined} aria-label={isLink && title ? title : undefined}>
  {title && <h3 class="ui-card__title">{title}</h3>}
  <div class="ui-card__content"><slot /></div>
</${Tag}>